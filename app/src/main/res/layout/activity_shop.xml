<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.entra.barbers.ShopActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/shop_pic"
            android:layout_marginTop="-4dp"
            android:src="@drawable/barber"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <TextView
            android:id="@+id/shop_name"
            tools:text="Shop Name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/shop_address"
            tools:text="23, Sector 43, Gurgaon, Haryanak"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.appyvet.rangebar.RangeBar
            android:id="@+id/time_rangebar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tickStart="16"
            app:tickInterval="1"
            app:tickEnd="40"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <RelativeLayout
            android:layout_marginTop="-12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="8:00 AM"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="8:00 PM"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Men"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:layout_weight="5"
                android:text="v"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/shop_male_expandable"
            app:ael_expanded="false"
            app:ael_duration="500"
            app:ael_interpolator="bounce"
            app:ael_orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/shop_male_flexbox"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.google.android.flexbox.FlexboxLayout>



        </com.github.aakira.expandablelayout.ExpandableLinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Women"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:layout_weight="4"
                android:text="v"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/shop_female_expandable"
            app:ael_expanded="true"
            app:ael_duration="500"
            app:ael_interpolator="bounce"
            app:ael_orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/shop_female_flexbox"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.google.android.flexbox.FlexboxLayout>


        </com.github.aakira.expandablelayout.ExpandableLinearLayout>



    </LinearLayout>
    </ScrollView>


    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/shop_cart"
        app:ael_expanded="true"
        app:ael_duration="500"
        app:ael_interpolator="linear"
        app:ael_orientation="horizontal"
        android:orientation="horizontal"
        android:background="#009900"
        android:padding="16dp"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            tools:text="Cart: 3 items"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_weight="3"
            android:textColor="#ffffff"
            android:gravity="right"
            android:text="Next >"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





    </com.github.aakira.expandablelayout.ExpandableLinearLayout>


</RelativeLayout>
